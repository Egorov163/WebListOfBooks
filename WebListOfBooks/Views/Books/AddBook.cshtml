@using WebListOfBooks.Models.Books
@model BookViewModel

<div>
    <form method="post">
        <div>
            Название книги @Html.TextBoxFor(x => x.Name)
        </div>

        <div>
            Автор @Html.TextBoxFor(x => x.Author)
        </div>

        <div>
            <input type="submit" value="Добавить книгу" />
        </div>
    </form>
</div>